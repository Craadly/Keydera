# BEGIN Keydera

DirectoryIndex index.php index.html

<IfModule mod_rewrite.c>
  RewriteEngine On
  # RewriteBase /

  # --- Optional: Force HTTPS ---
  # RewriteCond %{HTTPS} !=on
  # RewriteRule ^ https://%{HTTP_HOST}%{REQUEST_URI} [R=301,L]

  # Bypass real files/dirs and public asset folders
  RewriteRule ^(index\.php|favicon\.png|assets/|images/|js/|css/|vendor/) - [L]

  RewriteCond %{REQUEST_FILENAME} !-f
  RewriteCond %{REQUEST_FILENAME} !-d

  # Front controller (CodeIgniter-style routing)
  RewriteRule ^(.*)$ index.php?/$1 [L,QSA]
  # Alternative (PATH_INFO style):
  # RewriteRule ^ index.php [L,QSA]
</IfModule>

# Useful security headers (only if mod_headers is available)
<IfModule mod_headers.c>
  Header always set X-Content-Type-Options "nosniff"
  Header always set X-Frame-Options "SAMEORIGIN"
  # X-XSS-Protection is deprecated, keep only if you want legacy behavior:
  Header always set X-XSS-Protection "1; mode=block"
</IfModule>

# Static files caching (optional)
<FilesMatch "\.(svg|jpg|jpeg|png|ico|js|css)$">
  # Header set Cache-Control "max-age=84600, public"
</FilesMatch>

# END Keydera
